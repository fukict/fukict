{
  "name": "vanilla-dom",
  "version": "0.0.0",
  "private": true,
  "description": "专注于性能场景的轻量级 DOM 渲染库",
  "keywords": [
    "dom",
    "jsx",
    "vanilla",
    "typescript",
    "rendering",
    "performance"
  ],
  "homepage": "https://github.com/vanilla-dom/vanilla-dom#readme",
  "bugs": {
    "url": "https://github.com/vanilla-dom/vanilla-dom/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vanilla-dom/vanilla-dom.git"
  },
  "license": "MIT",
  "author": "xiaoyown <xiaoyown@example.com>",
  "type": "module",
  "scripts": {
    "build": "pnpm build:pkg && pnpm build:demos",
    "build:demos": "pnpm --filter './demos/*' build",
    "build:pkg": "./scripts/build-package.sh core babel-plugin widget babel-preset-widget",
    "build:pkg:watch": "./scripts/build-package.sh core widget babel-plugin babel-preset-widget watch",
    "changeset": "changeset",
    "changeset:alpha": "changeset version --snapshot alpha",
    "changeset:beta": "changeset version --snapshot beta",
    "changeset:publish": "changeset publish",
    "changeset:release": "pnpm build && changeset publish",
    "changeset:version": "changeset version",
    "clean": "pnpm -r clean",
    "format": "prettier --write .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "publish": "./scripts/release.sh",
    "release": "./scripts/release.sh",
    "test": "pnpm -r test",
    "version:alpha": "changeset version --snapshot alpha && changeset publish --tag alpha",
    "version:beta": "changeset version --snapshot beta && changeset publish --tag beta",
    "version:rc": "changeset version --snapshot rc && changeset publish --tag rc"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.4",
    "@eslint/js": "^9.28.0",
    "@trivago/prettier-plugin-sort-imports": "5.0.1",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "prettier": "3.4.2",
    "prettier-plugin-packagejson": "2.5.6",
    "prettier-plugin-sort-json": "4.0.0",
    "prettier-plugin-svelte": "3.3.2",
    "tsdown": "^0.12.7",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "pnpm": ">=7.0.0"
  }
}
