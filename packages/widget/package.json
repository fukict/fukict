{
  "name": "@fukict/widget",
  "version": "0.0.0-alpha-20250608081318",
  "description": "Component abstraction layer for fukict",
  "keywords": [
    "dom",
    "jsx",
    "components",
    "vanilla",
    "widget",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/fukict/fukict.git",
    "directory": "packages/widget"
  },
  "license": "MIT",
  "author": "xiaoyown",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./jsx-runtime": {
      "import": "./dist/jsx-runtime.js",
      "types": "./dist/jsx-runtime.d.ts"
    },
    "./class-widget": {
      "import": "./dist/class-widget.js",
      "types": "./dist/class-widget.d.ts"
    },
    "./functional-widget": {
      "import": "./dist/functional-widget.js",
      "types": "./dist/functional-widget.d.ts"
    },
    "./adapters": {
      "import": "./dist/adapters.js",
      "types": "./dist/adapters.d.ts"
    },
    "./types": {
      "import": "./dist/types.js",
      "types": "./dist/types.d.ts"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "types",
    "README.md"
  ],
  "scripts": {
    "clean": "premove dist",
    "test": "vitest --run",
    "test:watch": "vitest",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "premove": "^4.0.0",
    "typescript": "^5.6.3",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "@fukict/core": "workspace:*"
  },
  "publishConfig": {
    "access": "public"
