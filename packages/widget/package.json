{
  "name": "@fukict/widget",
  "version": "0.1.0",
  "description": "Component abstraction layer for Fukict with lifecycle and state management",
  "keywords": [
    "fukict",
    "widget",
    "component",
    "lifecycle",
    "vdom",
    "ui"
  ],
  "bugs": {
    "url": "https://github.com/fukict/fukict/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fukict/fukict.git",
    "directory": "packages/widget"
  },
  "license": "MIT",
  "author": "Fukict Team",
  "sideEffects": false,
  "type": "module",
  "exports": {
