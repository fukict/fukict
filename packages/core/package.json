{
  "name": "@vanilla-dom/core",
  "version": "0.1.0",
  "description": "Vanilla DOM core runtime - high-performance client-side rendering with JSX support",
  "keywords": [
    "dom",
    "jsx",
    "vanilla",
    "client-side",
    "rendering",
    "typescript"
  ],
  "license": "MIT",
  "author": "xiaoyown",
  "repository": {
    "type": "git",
    "url": "https://github.com/vanilla-dom/vanilla-dom.git",
    "directory": "packages/core"
  },
  "type": "module",
  "sideEffects": [
    "./src/jsx-types.ts",
    "./dist/jsx-types.js"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./jsx-runtime": {
      "import": "./dist/jsx-runtime.js",
      "types": "./dist/jsx-runtime.d.ts"
    },
    "./jsx-types": {
      "import": "./dist/jsx-types.js",
      "types": "./dist/jsx-types.d.ts"
    },
    "./component-registry": {
      "import": "./dist/component-registry.js",
      "types": "./dist/component-registry.d.ts"
    },
    "./renderer": {
      "import": "./dist/renderer.js",
      "types": "./dist/renderer.d.ts"
    },
    "./dom-utils": {
      "import": "./dist/dom-utils.js",
      "types": "./dist/dom-utils.d.ts"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "premove dist && tsup",
    "dev": "tsup --watch",
    "test": "vitest --run",
    "test:watch": "vitest",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "jsdom": "^24.0.0",
    "premove": "^4.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "typescript": ">=4.5.0"
  }
}
