{
  "name": "@fukict/runtime",
  "version": "0.0.0-alpha-20250608081318",
  "description": "轻量级 DOM 渲染引擎，VNode 到 DOM 转换",
  "keywords": [
    "dom",
    "jsx",
    "vanilla",
    "client-side",
    "rendering",
    "typescript",
    "vnode",
    "performance",
    "lightweight",
    "component-pattern",
    "ref-callback"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/fukict/fukict.git",
    "directory": "packages/runtime"
  },
  "license": "MIT",
  "author": "xiaoyown",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./jsx-runtime": {
      "import": "./dist/jsx-runtime.js",
      "types": "./dist/jsx-runtime.d.ts"
    },
    "./types": {
      "types": "./types/index.d.ts"
    },
    "./types/jsx": {
      "types": "./types/jsx.d.ts"
    },
    "./component-registry": {
      "import": "./dist/pattern-registry.js",
      "types": "./dist/pattern-registry.d.ts"
    },
    "./renderer": {
      "import": "./dist/renderer.js",
      "types": "./dist/renderer.d.ts"
    },
    "./dom-utils": {
      "import": "./dist/dom-utils.js",
      "types": "./dist/dom-utils.d.ts"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "types",
    "README.md"
  ],
  "scripts": {
    "clean": "premove dist",
    "test": "vitest --run",
    "test:watch": "vitest",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "jsdom": "^24.0.0",
    "premove": "^4.0.0",
    "typescript": "^5.6.3",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "typescript": ">=4.5.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
