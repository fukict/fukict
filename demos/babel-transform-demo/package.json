{
  "name": "babel-transform-demo",
  "version": "0.1.0",
  "private": true,
  "description": "测试 @fukict/babel-plugin 的 JSX 转换效果",
  "scripts": {
    "clean": "rm -rf dist",
    "test": "pnpm run transform && node test-runner.mjs",
    "test-all": "pnpm run test && pnpm run test-ts && pnpm run test-webpack",
    "test-ts": "pnpm run transform-ts && node test-runner-ts.mjs",
    "test-webpack": "pnpm run transform-webpack && node test-runner-webpack.mjs",
    "transform": "babel src/test.jsx --out-file dist/test.js",
    "transform-ts": "babel src/test.tsx --out-file dist/test-ts.js",
    "transform-webpack": "babel src/test.tsx --out-file dist/test-webpack.js --config-file ./babel-webpack.config.js"
  },
  "dependencies": {
    "@fukict/runtime": "workspace:*"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/plugin-syntax-jsx": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-typescript": "^7.0.0",
    "@fukict/babel-plugin": "workspace:*",
    "typescript": "^5.0.0"
  }
}
